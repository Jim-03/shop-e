<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="CSS/account.css">
    <title>Account</title>
</head>
<body>
    <header>
        <h1>Shop-E</h1>
        <h2 id="greeting"></h2>
    </header>
    <main>
        <section id="navigationSection">
            <nav>
                <a id="aboutAnchor" class="options">
                    <i class="fa-solid fa-address-card"></i>
                    About
                </a>
                <a id="update" class="options">
                    <i class="fa-solid fa-pen-nib"></i>
                    Update
                </a>
                <a id="orders" class="options">
                    <i class="fa-solid fa-list"></i>
                    Order History
                </a>
                <a href="#cart" class="options">
                    <i class="fa-solid fa-cart-shopping"></i>
                    Cart
                </a>
                <a href="#services" class="options">
                    <i class="fa-solid fa-headset"></i>
                    Services
                </a>
                <a href="#settings" class="options">
                    <i class="fa-solid fa-screwdriver-wrench"></i>
                    Settings
                </a>
                <a href="#terminate"  class="options" id="terminateAnchor">
                    <i class="fa-solid fa-ban"></i>
                    Terminate
                </a>
            </nav>
        </section>
        <section id="aboutSection">
            <section id="about">
                <p id="closeAbout">&times;</p>
                <h3>Account details</h3>
                <img src="data:image/png;base64," alt="User Pic" id="profilePic">
                <table id="userDataTable">
                    <tbody>
                        <tr>
                            <td class="accountProperty">Full Name:</td>
                            <td id="fullName">Customer Name</td>
                        </tr>
                        <tr>
                            <td class="accountProperty">Username:</td>
                            <td id="username">UserName</td>
                        </tr>
                        <tr>
                            <td class="accountProperty">Email:</td>
                            <td id="email">user@example.com</td>
                        </tr>
                        <tr>
                            <td class="accountProperty">Phone:</td>
                            <td id="phone">+1231234567</td>
                        </tr>
                        <tr>
                            <td class="accountProperty">Address:</td>
                            <td id="address">Eldoret</td>
                        </tr>
                        <tr>
                            <td class="accountProperty">Account Type:</td>
                            <td id="accountType">Customer</td>
                        </tr>
                        <tr>
                            <td class="accountProperty">Status:</td>
                            <td id="accountStatus">Active</td>
                        </tr>
                    </tbody>
                </table>
            </section>
        </section>
        <section id="updateSection">
            <form id="updateForm">
                <p id="notification"></p>
                <div>
                    <label for="profilePhoto">Profile Photo</label>
                    <input type="file" id="profilePhoto">
                </div>
                <div>
                    <label for="newUsername">Username</label>
                    <input type="text" id="newUsername">
                </div>
                <div>
                    <label for="oldPassword">Old Password</label>
                    <input type="password" id="oldPassword">
                </div>
                <div>
                    <label for="newPassword">New Password</label>
                    <input type="password" id="newPassword">
                </div>
                <div>
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword">
                </div>
                <div>
                    <label for="newName">Name</label>
                    <input type="text" id="newName">
                </div>
                <div>
                    <label for="newPhone">Phone</label>
                    <input type="tel" id="newPhone">
                </div>
                <div>
                    <label for="newEmail">Email</label>
                    <input type="email" id="newEmail">
                </div>
                <div id="updateButtons">
                    <button type="submit">Update</button>
                    <button type="reset">Cancel</button>
                </div>
            </form>
        </section>
        <section id="orderSection">
            <section id="orderDisplay">
                <p id="closeOrder">&times;</p>
                <h1>Orders</h1>
                <section id="ordersList">
                </section>
            </section>
            
        </section>
        <section id="cart"></section>
        <section id="services"></section>
        <section id="settings"></section>
        <section id="terminate"></section>
    </main>
    <footer style="
    background-color: #333;
    color: white;
    text-align: center;
    padding: 10px 20px;
    bottom: 0;
    width: 100%;">
        &copy; 2024 Shop-E. All rights reserved.
        <br>
        <a href="mailto:jimmycn03@gmail.com">Contact Developer</a>
    </footer>
    <script type="module" src="../public/JS/account.js"></script>
    <script type="module" src="JS/updateAccount.js"></script>
    <script type="module" src="JS/orderHistory.js"></script>
</body>
</html>